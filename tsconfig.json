{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "types": ["jest"]
  },
  "exclude": [
    "src/__tests__",
    "examples",
    "node_modules",
    "lib"
  ]
}
